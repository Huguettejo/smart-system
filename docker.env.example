# ============================================
# Configuration Docker Compose
# ============================================
# Copiez ce fichier vers .env et modifiez les valeurs selon vos besoins

# ============================================
# Configuration PostgreSQL
# ============================================
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=systeme_intelligent
POSTGRES_PORT=5432

# ============================================
# Configuration Backend
# ============================================
BACKEND_PORT=5000

# ============================================
# Clés secrètes (IMPORTANT: Changez-les en production!)
# ============================================
# Générer avec: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=change-me-in-production-secret-key-min-32-chars-generate-with-secrets-token-urlsafe
JWT_SECRET_KEY=change-me-in-production-jwt-secret-key-min-32-chars-generate-with-secrets-token-urlsafe

# ============================================
# Configuration JWT
# ============================================
JWT_ACCESS_TOKEN_EXPIRES=10800

# ============================================
# Configuration Hugging Face (Optionnel)
# ============================================
# Obtenez votre token sur: https://huggingface.co/settings/tokens
HF_API_TOKEN=

# ============================================
# Configuration Cache Hugging Face (Optionnel)
# ============================================
# Par défaut, le cache sera dans le volume Docker
# Vous pouvez spécifier un chemin personnalisé si nécessaire
# HF_HOME=/path/to/cache
# TRANSFORMERS_CACHE=/path/to/cache/transformers

